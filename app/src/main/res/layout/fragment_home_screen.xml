<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeScreen">

    <TextView
        android:id="@+id/news_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News App"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginVertical="16dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/headlines_rv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/news_app_title"
        />

    <TextView
        android:id="@+id/all_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All News"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="16dp"
        android:layout_below="@id/headlines_rv"
        />


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/newsRv"
        android:layout_below="@id/all_news" />

</RelativeLayout>